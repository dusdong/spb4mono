@{
    FollowUserMenu menu = ViewData.Get<FollowUserMenu>("FollowUserMenu", FollowUserMenu.MyFolloweds);
    RegistrationMode registrationMode = ViewData.Get<RegistrationMode>("RegistrationMode", RegistrationMode.All);
}
<div class="tn-box tn-widget tn-widget-content tn-corner-all tnc-msg-menu">
    <div class="tn-box-content tn-widget-content tn-corner-all">
        <div class="tn-section">
            <div class="tn-content-heading tn-border-gray tn-border-bottom">
                <h4>
                    消息</h4>
            </div>
            <ul class="tn-side-menu">
                <li @if (menu == FollowUserMenu)
                    { @Html.Raw("class=\"tn-selected tn-border-gray tn-bg-gray tn-corner-all\"");
                    }>
                    @Html.Link("我的私信", SiteUrls.Instance().ListMessageSessions(Url.SpaceKey(), null), "我的私信", new { @class = "tn-menu-text" })
                </li>
                <li @if (menu == FollowUserMenu.Notices)
                    { @Html.Raw("class=\"tn-selected tn-border-gray tn-bg-gray tn-corner-all\"");
                    }>
                    @Html.Link("我的通知", SiteUrls.Instance().ListNotices(Url.SpaceKey(), null, null), "我的通知", new { @class = "tn-menu-text" })</li>
                <li @if (menu == FollowUserMenu.Invitation)
                    { @Html.Raw("class=\"tn-selected tn-border-gray tn-bg-gray tn-corner-all\"");
                    }>
                    @Html.Link("我的请求", SiteUrls.Instance().ListInvitations(Url.SpaceKey()), "我的请求", new { @class = "tn-menu-text" })</li>
                <li @if (menu == FollowUserMenu.CommentsInBox)
                    { @Html.Raw("class=\"tn-selected tn-border-gray tn-bg-gray tn-corner-all\"");
                    }>
                    @Html.Link("我的评论", SiteUrls.Instance().ListCommentsInBox(Url.SpaceKey(), null), "我的评论", new { @class = "tn-menu-text" })</li>
            </ul>
        </div>
        <div class="tn-section">
            <div class="tn-content-heading tn-border-gray tn-border-bottom">
                <h4>
                    关注用户</h4>
            </div>
            <ul class="tn-side-menu">
                <li @if (menu == MessageCenterSubMenu.ManageFollowedUsers)
                    { @Html.Raw("class=\"tn-selected tn-border-gray tn-bg-gray tn-corner-all\"");
                    }>
                    @Html.Link("我的关注", SiteUrls.Instance().ManageFollowedUsers(Url.SpaceKey()), "我的关注", new { @class = "tn-menu-text" })
                </li>
                <li @if (menu == MessageCenterSubMenu.ManageFollowers)
                    { @Html.Raw("class=\"tn-selected tn-border-gray tn-bg-gray tn-corner-all\"");
                    }>
                    @Html.Link("我的粉丝", SiteUrls.Instance().ManageFollowers(Url.SpaceKey()), "我的粉丝", new { @class = "tn-menu-text" })</li>
                @if (registrationMode != RegistrationMode.Disabled)
                {
                    <li @if (menu == MessageCenterSubMenu.InviteFriend)
                        { @Html.Raw("class=\"tn-selected tn-border-gray tn-bg-gray tn-corner-all\"");
                        }>
                        @Html.Link("邀请好友", SiteUrls.Instance().InviteFriend(Url.SpaceKey()), "邀请好友", new { @class = "tn-menu-text" })</li>
                }
            </ul>
        </div>
    </div>
</div>
